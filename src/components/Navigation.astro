---
const MENU = [
    {
        name: 'Cosa vedere in Transilvania?',
        url: '/cosa-vedere-in-transilvania/'
    },
    {
        name: 'Castello di Dracula',
        url: '/castello-di-dracula/'
    },
    {
        name: 'Brasov',
        url: '/brasov/'
    },
    {
        name: 'Cluj-Napoca',
        url: '/cluj-napoca/'
    },
]
---
<div class="min-h-screen relative">
<header x-data="{atTop: false}" 
    class="fixed top-0 left-0 right-0 z-30 text-white p-6 flex flex-row justify-between items-center transition duration-300 ease-in-out"
    :class="{'bg-black shadow-2xl': atTop }"
    @scroll.window="atTop = (window.pageYOffset < 150) ? false : true"
    >

    <h1 class="text-xl lg:text-3xl">Transilvania</h1>
    <div class="flex flex-row items-center gap-3 font-bold cursor-pointer p-3 transition duration-300"
        :class="{'hover:bg-black hover:rounded hover:drop-shadow-2xl': !atTop, 'hover:bg-white hover:text-black hover:rounded hover:shadow-xl': atTop }"
    >
        <p class="text-xl lg:text-3xl">Menu</p>
        <svg @click="menuOpen = ! menuOpen" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 lg:w-8 h-6 lg:h-8 cursor-pointer">
            <path stroke-linecap="round" stroke-linejoin="round" d="M20.893 13.393l-1.135-1.135a2.252 2.252 0 01-.421-.585l-1.08-2.16a.414.414 0 00-.663-.107.827.827 0 01-.812.21l-1.273-.363a.89.89 0 00-.738 1.595l.587.39c.59.395.674 1.23.172 1.732l-.2.2c-.212.212-.33.498-.33.796v.41c0 .409-.11.809-.32 1.158l-1.315 2.191a2.11 2.11 0 01-1.81 1.025 1.055 1.055 0 01-1.055-1.055v-1.172c0-.92-.56-1.747-1.414-2.089l-.655-.261a2.25 2.25 0 01-1.383-2.46l.007-.042a2.25 2.25 0 01.29-.787l.09-.15a2.25 2.25 0 012.37-1.048l1.178.236a1.125 1.125 0 001.302-.795l.208-.73a1.125 1.125 0 00-.578-1.315l-.665-.332-.091.091a2.25 2.25 0 01-1.591.659h-.18c-.249 0-.487.1-.662.274a.931.931 0 01-1.458-1.137l1.411-2.353a2.25 2.25 0 00.286-.76m11.928 9.869A9 9 0 008.965 3.525m11.928 9.868A9 9 0 118.965 3.525" />
          </svg>
          
    </div>
</header>

<div class="absolute z-20 inset-0 flex items-center justify-center p-6">
    <div class="flex flex-col gap-6 lg:gap-10 items-center justify-center text-center p-10 text-white">
        <h2 class="text-4xl md:text-7xl lg:text-9xl">Transilvania</h2>
        <h3 class="text-2xl md:text-4xl lg:text-6xl font-mono">Lasciati travolgere dalla Magia...</h3>
    </div>
</div>

<video
        autoplay
        loop
        muted
        class="absolute min-h-screen inset-0 object-cover z-0"
      >
        <source
          src="video-transilvania.mp4"
          type="video/mp4"
        />
        Your browser does not support the video tag.
</video>
</div>
